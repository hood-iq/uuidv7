{
  "name": "uuidv7",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/uuidv7/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:public"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "libs/uuidv7",
        "command": "tsup src/index.ts --format cjs,esm --dts --clean --out-dir dist"
      }
    },
    "docs": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/docs"],
      "options": {
        "cwd": "libs/uuidv7",
        "command": "typedoc --entryPoints src/index.ts --out docs"
      }
    },
    "version": {
      "executor": "@nx/js:release-version",
      "options": {
        "releaseTagPattern": "{projectName}-{version}",
        "currentVersionResolver": "disk"
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "libs/uuidv7"
      }
    }
  },
  "release": {
    "version": {
      "generator": "@nx/js:release-version",
      "generatorOptions": {
        "packageRoot": "libs/uuidv7",
        "currentVersionResolver": "disk"
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "libs/uuidv7"
      }
    }
  }
}
